<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Matkaklubi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="bootstrap.css">
    <link rel="stylesheet" href="matkaklubi.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
</head>
<body>
    <div class="header-container">
        <div class="container">
            <%- include('components/header') %>
            <div class="row pealkiri">
                <div class="col-lg-6 pealkiri-kastid">
                    <div class="rida">
                        <h2 class="pohi-varv">Matkaklubi</h2>
                        <img class="liblikas1" src="./assets/Butterfly.png" alt="">
                    </div>
                    <div class="rida">
                        <img src="./assets/Butterfly2.png" class="liblikas2" alt="">
                        <h1 class="pohi-varv">Puhas Higi</h1>
                    </div>
                    <div class="rida viimane-rida">
                        <h3 class="pohi-varv">
                            Liikumine - tervise ja ilu pant
                        </h3>
                    </div>
                    <div class="rida">
                        <a href="#" class="call-to-action">Võta ühendust</a>
                    </div>
                </div>
                <div class="col-lg-6 pealkiri-pilt d-none d-lg-block">
                    <img src="./assets/Hiker.png" class="matkaja" alt="">
                    <img src="./assets/Shadow.png" class="vari" alt="">
                </div>
            </div>
        </div>
    </div>
    <div class="row pt-4">
        <% matkad.forEach((matk) => { %>
        <div class="col-4">
            <div class="card">
                <img class="card-img-top" src="<%= matkad[0].pildiUrl %>" alt="Matka pilt" />
                <div class="card-body">
                    <h5 class="card-title"><%= matkad[0].nimetus %></h5>
                    <p class="card-text"><%= matkad[0].kirjeldus %></p>
                    <a href="#" class="btn btn-primary">Vaata lähemalt</a>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
    
</body>
</html>